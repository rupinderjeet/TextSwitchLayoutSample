<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/ts_width"
    android:layout_height="@dimen/ts_height">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/ts_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@null"
        android:elevation="2dp"
        android:thumb="@drawable/text_switch_thumb"
        app:switchMinWidth="@dimen/ts_width"
        app:track="@drawable/text_switch_track" />

    <TextView
        android:id="@+id/ts_on_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:maxLength="5"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ts_off_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:maxLength="5"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

</merge>